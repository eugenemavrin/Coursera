#include <iostream>
#include <map>
#include <string>
using namespace std;


template <typename key, typename value>
value& GetRefStrict(const map<key, value>& M, key k) {
	try {
		return M.at(k);
	} catch (exception &e) {
		throw runtime_error("key doesn't exist");
	}
}

int main() {
	map<int, string> m = {{0, "value"}};
	string& item = GetRefStrict(m, 0);
	item = "newvalue";
	cout << m[0] << endl; // выведет newvalue	return 0;
	return 0;
}
