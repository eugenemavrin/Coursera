#include <iostream>
#include <vector>
using namespace std;

int main() {
	int n, t;
	cin >> n;
	vector<int> temp(n);
	vector<int> index;
	for (int i = 0; i < n; i++) {
		cin >> temp[i];
	}
	int sum = 0;
	cout << "sum = " << sum;
	for (int i : temp) {
		cout << i;
		sum = sum + i;
	}
	//sum /= n;
	cout << "sum = " << sum;
	int res = 0;
	for (int i = 0; i < n; ++i) {
		if (sum < i) {
			res++;
			index.push_back(i);
		}
	}
	cout << res << endl;
	for (int i : index) {
		cout << i << " ";
	}
	return 0;
}
